<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".socializationwords.LearningPhase">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <GridLayout
            android:layout_width="382dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_margin="0dp"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:columnOrderPreserved="false"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/hello"
                android:layout_width="170dp"
                android:layout_height="190dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="12dp"
                app:cardElevation="5dp"
                android:clickable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="170dp"
                        android:layout_height="120dp"
                        android:src="@drawable/hello"
                         />

                    <Button
                        android:id="@+id/hellobtn"
                        android:layout_width="150dp"
                        android:layout_height="35dp"
                        android:text="@string/hello"
                        android:textSize="14sp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/rounded_button"
                        android:textColor="@color/white"

                        >
                    </Button>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/howAreYou"
                android:layout_width="170dp"
                android:layout_height="190dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="12dp"
                app:cardElevation="5dp"
                android:clickable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="170dp"
                        android:layout_height="120dp"
                        android:src="@drawable/how_are_you"
                         />

                    <Button
                        android:id="@+id/howAreYoubtn"
                        android:layout_width="150dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="5dp"
                        android:text="@string/h_a_y"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:background="@drawable/rounded_button">
                    </Button>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/whatIsYourName"
                android:layout_width="170dp"
                android:layout_height="190dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="12dp"
                app:cardElevation="5dp"
                android:clickable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="170dp"
                        android:layout_height="120dp"
                        android:src="@drawable/what_is_your_name"
                         />

                    <Button
                        android:id="@+id/whatIsYourNamebtn"
                        android:layout_width="150dp"
                        android:layout_height="35dp"
                        android:textColor="@color/white"
                        android:text="@string/w_i_y_n"
                        android:layout_marginTop="5dp"
                        android:textSize="14sp"
                        android:background="@drawable/rounded_button">
                    </Button>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/myName"
                android:layout_width="170dp"
                android:layout_height="190dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="12dp"
                app:cardElevation="5dp"
                android:clickable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="170dp"
                        android:layout_height="120dp"
                        android:src="@drawable/my_name_is"
                         />

                    <Button
                        android:id="@+id/myNamebtn"
                        android:layout_width="150dp"
                        android:layout_height="35dp"
                        android:textColor="@color/white"
                        android:text="@string/m_n_i"
                        android:layout_marginTop="5dp"
                        android:textSize="14sp"
                        android:background="@drawable/rounded_button">
                    </Button>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/fineThankYou"
                android:layout_width="170dp"
                android:layout_height="190dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="12dp"
                app:cardElevation="5dp"
                android:clickable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="170dp"
                        android:layout_height="120dp"
                        android:src="@drawable/fine_thank_you"
                        />

                    <Button
                        android:id="@+id/fineThankYoubtn"
                        android:layout_width="150dp"
                        android:layout_height="35dp"
                        android:textColor="@color/white"
                        android:text="@string/fine_thank"
                        android:layout_marginTop="5dp"
                        android:textSize="14sp"
                        android:background="@drawable/rounded_button">
                    </Button>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/goodBye"
                android:layout_width="170dp"
                android:layout_height="190dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="12dp"
                app:cardElevation="5dp"
                android:clickable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="170dp"
                        android:layout_height="120dp"
                        android:src="@drawable/good_bye"
                        />

                    <Button
                        android:id="@+id/goodByebtn"
                        android:layout_width="150dp"
                        android:layout_height="35dp"
                        android:textColor="@color/white"
                        android:text="@string/goodBye"
                        android:layout_marginTop="5dp"
                        android:textSize="14sp"
                        android:background="@drawable/rounded_button">
                    </Button>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </GridLayout>



    </LinearLayout>

</ScrollView>