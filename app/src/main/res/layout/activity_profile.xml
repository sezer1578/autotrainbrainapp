<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_background"
    android:paddingTop="@dimen/margin_medium"
    android:paddingBottom="@dimen/margin_medium">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/margin_input_horizontal"
            android:paddingRight="@dimen/margin_input_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:text="@string/hint_username"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/userNameEdt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/edit_text_border"
                android:hint="@string/hint_username"
                android:textColor="@color/grey"
                android:enabled="false"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="15dp"
                android:singleLine="true"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/pswChange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:clickable="true"
                android:text="@string/change_pasw"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:text="@string/email"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/emailEdt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/edit_text_border"
                android:hint="@string/email"
                android:textColor="@color/cardview_dark_background"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="15dp"
                android:singleLine="true"
                android:textSize="15sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="5dp"
                android:text="@string/hint_birthdate"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/birthdateEdt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/edit_text_border"
                android:hint="@string/hint_birthdate"
                android:focusable="false"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="15dp"
                android:singleLine="true"
                android:textColorHint="@color/cardview_dark_background"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="5dp"
                android:text="@string/hint_skill"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/skillEdt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/edit_text_border"
                android:hint="@string/hint_skill"
                android:focusable="false"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="15dp"
                android:singleLine="true"
                android:textColorHint="@color/cardview_dark_background"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="5dp"
                android:text="@string/hint_gender"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edit_text_border"
                android:layout_gravity="center_horizontal">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/genderEdt"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:singleLine="true"
                    android:layout_gravity="center_horizontal"
                    android:textSize="15sp" />

            </RelativeLayout>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="5dp"
                android:text="@string/hint_session"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/sessionEdt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/edit_text_border"
                android:hint="@string/hint_session"
                android:textColor="@color/grey"
                android:enabled="false"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="15dp"
                android:singleLine="true"
                android:textColorHint="@color/cardview_dark_background"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="5dp"
                android:text="@string/hint_maxsession"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/maxsessionEdt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/edit_text_border"
                android:hint="@string/hint_maxsession"
                android:paddingLeft="20dp"
                android:textColor="@color/grey"
                android:enabled="false"
                android:paddingTop="10dp"
                android:paddingBottom="15dp"
                android:singleLine="true"
                android:textColorHint="@color/cardview_dark_background"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="5dp"
                android:text="@string/location"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/locationEdt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/edit_text_border"
                android:hint="@string/location"
                android:paddingLeft="20dp"
                android:textColor="@color/cardview_dark_background"
                android:paddingTop="10dp"
                android:paddingBottom="15dp"
                android:singleLine="true"
                android:textColorHint="@color/cardview_dark_background"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="5dp"
                android:text="@string/subsEnd"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/helperEdt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/edit_text_border"
                android:hint="@string/subsEnd"
                android:textColor="@color/grey"
                android:enabled="false"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="15dp"
                android:singleLine="true"
                android:textSize="15sp" />

            <Button
                android:id="@+id/saveBtn"
                android:layout_width="270dp"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginBottom="25dp"
                android:backgroundTint="@color/colorPrimary"
                android:background="@drawable/new_viebg"
                android:paddingTop="@dimen/margin_xxsmall"
                android:paddingBottom="@dimen/margin_xxsmall"
                android:text="@string/save"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>