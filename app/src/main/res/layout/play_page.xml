<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="387dp"
        android:layout_height="566dp"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_medium"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/play_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/play_u"
            android:textSize="40dp"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:textAllCaps="true"
            android:textStyle="bold"></TextView>

    </LinearLayout>

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="165dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_xlarge"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/FamFace"
                android:layout_width="160dp"
                android:layout_height="161dp"
                android:backgroundTint="@color/orange"
                app:cardCornerRadius="@dimen/margin_small"
                android:layout_marginLeft="@dimen/margin_xxsmall">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/margin_small"
                        android:src="@drawable/facerecognitionn"></ImageView>

                    <TextView
                        android:id="@+id/fam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/margin_small"
                        android:text="@string/family_member_recognition"
                        android:textColor="@color/white"
                        android:textSize="25sp"></TextView>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/Emo"
                android:layout_width="160dp"
                android:layout_height="161dp"
                android:layout_marginLeft="@dimen/margin_medium"
                android:backgroundTint="@color/orange"
                app:cardCornerRadius="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/margin_small"
                        android:src="@drawable/reaction"
                        ></ImageView>

                    <TextView
                        android:id="@+id/emo"
                        android:layout_width="99dp"
                        android:layout_height="60dp"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/emotion"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="21sp"></TextView>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"></RelativeLayout>
        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="165dp"
            android:layout_marginTop="@dimen/margin_large"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
    <androidx.cardview.widget.CardView
        android:id="@+id/Soc"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:backgroundTint="@color/orange"
        app:cardCornerRadius="@dimen/margin_small"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_marginLeft="@dimen/margin_xxsmall"

        >

        <LinearLayout
            android:layout_width="144dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_small"
                android:src="@drawable/conversation"></ImageView>

            <TextView
                android:id="@+id/soci"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_small"
                android:text="@string/soci_words"
                android:textColor="@color/white"
                android:textSize="25sp"></TextView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/deneme"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:backgroundTint="@color/orange"
                app:cardCornerRadius="@dimen/margin_small"
                android:layout_marginLeft="@dimen/margin_medium"
                android:layout_marginRight="@dimen/margin_small"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView10"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/margin_small"
                        app:srcCompat="@drawable/familypicture"></ImageView>

                    <TextView
                        android:id="@+id/denemetv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:text="@string/family_member_recognition"
                        android:textColor="@color/white"
                        android:textSize="25sp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/margin_small"></TextView>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
