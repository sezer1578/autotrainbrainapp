<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:scaleType="centerCrop"
        android:src="@drawable/background"
        android:layout_above="@id/lytRegister"/>

    <FrameLayout
        android:id="@+id/lytRegister"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:background="@drawable/vie_bg"
        android:layout_alignParentBottom="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/vie_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="295dp"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginBottom="8dp"
                    android:text="@string/email"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/emailEdt"
                    android:layout_width="320dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/edit_text_border"
                    android:hint="@string/email"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="15dp"
                    android:singleLine="true"
                    android:textColorHint="@color/cardview_dark_background"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginBottom="8dp"
                    android:text="@string/hint_username"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/userNameEdt"
                    android:layout_width="320dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/edit_text_border"
                    android:hint="@string/hint_username"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="15dp"
                    android:singleLine="true"
                    android:textColorHint="@color/cardview_dark_background"
                    android:textSize="15sp" />


                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    android:text="@string/hint_password"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/passwordLayout"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="1dp"
                    app:hintEnabled="false"
                    android:focusable="false"
                    app:passwordToggleEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/passwordEdt"
                        android:layout_width="320dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/edit_text_border"
                        android:hint="@string/hint_password"
                        android:inputType="textPassword"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingRight="20dp"
                        android:singleLine="true"
                        android:textColorHint="@color/cardview_dark_background"
                        android:textSize="15sp"
                        android:clickable="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true"/>

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    android:text="@string/hint_birthdate"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/birthdateEdt"
                    android:layout_width="320dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/edit_text_border"
                    android:hint="@string/hint_birthdate"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="20dp"
                    android:singleLine="true"
                    android:textColorHint="@color/cardview_dark_background"
                    android:textSize="15sp"
                    android:focusable="false"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    android:text="@string/hint_skill"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/skillEdt"
                    android:layout_width="320dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/edit_text_border"
                    android:hint="@string/hint_skill"
                    android:focusable="false"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="20dp"
                    android:singleLine="true"
                    android:textColorHint="@color/cardview_dark_background"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginBottom="8dp"
                    android:text="@string/location"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/locationEdt"
                    android:layout_width="320dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/edit_text_border"
                    android:hint="@string/location"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="15dp"
                    android:singleLine="true"
                    android:textColorHint="@color/cardview_dark_background"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    android:text="@string/hint_help"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/helperEdt"
                    android:layout_width="320dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/edit_text_border"
                    android:hint="@string/hint_help"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:focusable="false"
                    android:paddingBottom="10dp"
                    android:paddingRight="20dp"
                    android:singleLine="true"
                    android:textColorHint="@color/cardview_dark_background"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    android:text="@string/hint_gender"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_border"
                    android:layout_gravity="center_horizontal">

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/genderSpinner"
                        android:layout_width="320dp"
                        android:layout_height="50dp"
                        android:singleLine="true"
                        android:layout_gravity="center_horizontal"
                        android:textSize="15sp" />

                </RelativeLayout>



                <Button
                    android:id="@+id/registerBtn"
                    android:layout_width="320dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/new_viebg"
                    android:text="@string/register"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@color/green"
                    android:layout_marginBottom="20dp"/>

            </LinearLayout>
        </ScrollView>
    </FrameLayout>
</RelativeLayout>
